<Window x:Class="CompanyProject.Views.AddEditOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CompanyProject.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditOrder">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lEditOrder" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Visibility="Hidden">Edit Order</Label>
        <Label x:Name="lNewOrder" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Visibility="Visible">New Order</Label>
        
        <StackPanel  Grid.Row="1" Grid.Column="0">
            <Label Content="Id : "></Label>
            <Label Content="{Binding Id}" ></Label>
        </StackPanel>
        
        <DataGrid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Code}" Header=" Item Code " IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Name}" Header=" Name" IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Weight}" IsReadOnly="True" Header=" Weight " />
                <DataGridTextColumn Binding="{Binding Volume}" IsReadOnly="True" Header=" Volume " />
                <DataGridTextColumn Binding="{Binding Price}" IsReadOnly="True" Header=" Unit Price " />
                <DataGridTextColumn Binding="{Binding LeadTime}" IsReadOnly="True" Header=" Lead Time " />
                <DataGridTextColumn Binding="{Binding Quantity}" IsReadOnly="False" Header=" Quantity " />
            </DataGrid.Columns>
        </DataGrid>
        <Label Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Margin="5" HorizontalAlignment="Center" Content="Notes:"></Label>
        <TextBox Text="{Binding Notes}" Grid.Column="0" Grid.Row="3" Grid.RowSpan="2" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="5" Height="55" Width="250" HorizontalAlignment="Right"></TextBox>
        <Label Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="5" HorizontalAlignment="Center">Do you want to confirm the order?</Label>
        <Button Grid.Column="2" Grid.Row="4" VerticalAlignment="Top" Margin="10" HorizontalAlignment="Right" Width="80">Yes</Button>
        <Button Grid.Column="3" Grid.Row="4"  VerticalAlignment="Top" Margin="10"   HorizontalAlignment="Left" Width="80" >No</Button>
    </Grid>
</Window>
